@model IEnumerable<ageebSoft.SignlR.Core.Models.DB.Message>

<div class="container col-6">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            User..........<b class="userName"></b>
            <br />
            Message...<input type="text" id="msgInput" value="السلام عليكم" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="msgList">
                @foreach (var item in Model)
                {
                    <li>@item.Sender.UserName Say : @item.Msg </li>
                }

            </ul>
        </div>
    </div>
</div>


<div class="container col-6">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            Group..........<input type="text" value="GroupA" id="grpInput" />
            <input type="button" id="btnjoinGroup" value="join Group" />
            <br />
            <br />
            User..........<b class="userName"></b>
            <br />
            Message...<input type="text" value="السلام عليكم " id="grpmsgInput" />

            <input type="button" id="grpSendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="grpMsgList"></ul>
        </div>
    </div>
</div>
<div class="container col-6">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="OnlineList"></ul>
        </div>
    </div>
</div>


<script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/chatX.js"></script>
<script>
    $(() => {
        var userNameX = getQueryStringByName("user");
        $(".userName").text(userNameX);
    });

</script>